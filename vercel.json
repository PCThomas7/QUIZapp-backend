{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "**/*.js",
          "controllers/**/*.js",
          "routes/**/*.js",
          "models/**/*.js",
          "middleware/**/*.js",
          "utilits/**/*.js",
          "scripts/**/*.js",
          "db/**/*.js"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/routes/authRoutes.js"
    },
    {
      "src": "/api/batches/(.*)",
      "dest": "/routes/batchRoutes.js"
    },
    {
      "src": "/api/courses/(.*)",
      "dest": "/routes/courseRoutes.js"
    },
    {
      "src": "/api/quizzes/(.*)",
      "dest": "/routes/QuizRoutes.js"
    },
    {
      "src": "/api/questions/(.*)",
      "dest": "/routes/questionRoutes.js"
    },
    {
      "src": "/api/tags/(.*)",
      "dest": "/routes/TagRoutes.js"
    },
    {
      "src": "/api/student/(.*)",
      "dest": "/routes/studentRoutes.js"
    },
    {
      "src": "/api/export/(.*)",
      "dest": "/routes/getCsvRoutes.js"
    },
    {
      "src": "/api/mail/(.*)",
      "dest": "/routes/sendMailRoutes.js"
    },
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS, PATCH"
      },
      "dest": "app.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}